<iframe id="hiddenFrame" name="hiddenFrame" class="shrink-hide"></iframe>

<form id="form_add_record" action="/api/inventory" method="POST" target="hiddenFrame">
    <div class="section">
        <h2 class="center">Add Item</h2>

        <div class="section">
            <b>Description</b>
            <input class="component" type="text" name="description" />
        </div>

        <div class="section">
            <b>Quantity</b>
            <input class="component" type="number" name="quantity" />
        </div>

        <div class="section">
            <b>Price</b>
            <input class="component" type="number" step="0.01" name="price" />
        </div>

        <button class="button fill" id="submit">SUBMIT</button>
    </div>
</form>